{
	"name": "create-theme-json",
	"version": "0.0.1",
	"description": "Split WordPress theme.json into smaller files.",
	"author": "Dekode Interaktiv AS",
	"license": "GPL-2.0-or-later",
	"engines": {
		"node": ">=12.13",
		"npm": ">=6.9"
	},
	"files": [
		"dist"
	],
	"bin": {
		"create-theme-json": "./dist/bin/create-theme-json.js"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"del-cli": "4.0.1",
		"eslint": "^7.32.0",
		"husky": "7.0.2",
		"jest": "27.2.0",
		"lint-staged": "11.1.2",
		"prettier": "2.4.0",
		"typescript": "4.4.3"
	},
	"lint-staged": {
		"*.{js,md,yml}": "prettier --write",
		"*.js": "eslint --cache --fix"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"format": "prettier --write .",
		"lint": "eslint .",
		"prepare": "husky install && npm run build",
		"test": "jest"
	}
}
